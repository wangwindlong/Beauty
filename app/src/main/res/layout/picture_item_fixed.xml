             android:foreground="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>

</FrameLayout>
